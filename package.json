{
  "name": "http-client-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action that allows to specify a server endpoint & GraphQL query to execute.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest --clearCache && jest",
    "all": "yarn install && yarn build && yarn format && yarn format-check && yarn lint && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CamiloGarciaLaRotta/http-client-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Camilo Garcia La Rotta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "axios": "^1.3.2",
    "jest-os-detection": "^1.3.1",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@zeit/ncc": "^0.22.3",
    "acorn": ">=8.8.2",
    "eslint": "^8.35.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "flow-bin": "^0.199.1",
    "graphql": "^16.6.0",
    "jest": "^29.4.2",
    "jest-circus": "^29.4.2",
    "kind-of": ">=6.0.3",
    "minimist": ">=1.2.8",
    "node-fetch": ">=3.3.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
