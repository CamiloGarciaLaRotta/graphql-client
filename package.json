{
  "name": "http-client-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action that allows to specify a server endpoint & GraphQL query to execute.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CamiloGarciaLaRotta/http-client-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Camilo Garcia La Rotta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@types/jest-when": "^2.7.0",
    "axios": "^0.19.2",
    "jest-when": "^2.7.0",
    "kind-of": ">=6.0.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.5",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.2",
    "ts-jest": "^24.3.0",
    "typescript": "^3.8.3",
    "acorn": ">=6.4.1",
    "minimist": ">=1.2.2"
  }
}
